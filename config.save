# https://github.com/Airblader/i3



default_border pixel 3
gaps inner 5
for_window [class=".*"] border pixel 5
#for_window [class=".*"] floating enable

floating_minimum_size 75 x 50
floating_maximum_size -1 x -1

title_align center
popup_during_fullscreen smart
workspace_auto_back_and_forth yes


# class                 border  backgr. text    indicator child_border
client.focused          #000000 #000000 #000000 #E74C3C   #00E9FF
client.focused_inactive #000000 #000000 #000000 #000000   #000000
client.unfocused        #000000 #000000 #000000 #000000   #000000
client.urgent           #000000 #000000 #000000 #000000   #C0392B
client.placeholder      #000000 #000000 #000000 #000000   #2ECC71

client.background       #000000


bar {
	font pango:FreeSans, FontAwesome 10
	position top
	tray_output primary
	#output primary
	tray_padding 0
	strip_workspace_numbers yes
	binding_mode_indicator yes
	workspace_min_width 25
	binding_mode_indicator yes
	strip_workspace_name yes
	status_command bumblebee-status -m  pacman  pasink system -p root.path=/ nic.format="{intf} {ssid}" cpu.format=" cpu: {:.01f}% " time.format="%I:%M %p " pacman.sum="true" date.format=" %a, %d %b %Y " memory{ format = "%used"} -t greyish-powerline

colors {
        background #000000
        statusline #A0FF00
        separator #C0392B
	
        focused_workspace  #101f27 #62717b #ffffff
        active_workspace   #62727b #62727b #101f27
        inactive_workspace #101f27 #37464f #101f27
        urgent_workspace   #37474f #62717b #d84315
        binding_mode       #101f27 #62717b #ffffff
    }

}
